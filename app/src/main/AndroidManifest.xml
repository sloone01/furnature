<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.market">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE " />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.example.market.config.AppConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.market.UserDeliveringOrders" />
        <activity android:name="com.example.market.ShowMap" />
        <activity android:name="com.example.market.ShowItems" />
        <activity android:name="com.example.market.AdminOrderItems" />
        <activity android:name="com.example.market.maps" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name="com.example.market.Search" />
        <activity android:name="com.example.market.OrderDetails" />
        <activity android:name="com.example.market.EditItem" />
        <activity android:name="com.example.market.AdminHistory" />
        <activity android:name="com.example.market.AdminDeliveryOrders" />
        <activity android:name="com.example.market.AdminPendingOrders" />
        <activity android:name="com.example.market.ManageItems" />
        <activity android:name="com.example.market.UserPendingOrders" />
        <activity android:name="com.example.market.ShowCart" />
        <activity android:name="com.example.market.ViewItemsByBrand" />
        <activity android:name="com.example.market.EditBrand" />
        <activity android:name="com.example.market.ManageBrands" />
        <activity android:name="com.example.market.BrandsPage" />
        <activity android:name="com.example.market.UserMenu" />
        <activity android:name="com.example.market.ShopOnline" />
        <activity android:name="com.example.market.AdminMenue" />
        <activity android:name="com.example.market.AddProduct" />
        <activity android:name="com.example.market.Register" />
        <activity android:name="com.example.market.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.market.MainActivity" />
    </application>

</manifest>