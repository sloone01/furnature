<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="289.9dp"
    android:layout_height="435.8dp"
    android:paddingLeft="30dp"
    android:paddingBottom="30dp"
    android:paddingRight="30dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:src="@drawable/additem"
        android:layout_width="65.1dp"
        android:layout_height="65.1dp"
        android:layout_marginTop="46.1dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count"
        android:textSize="28.8sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="21.2dp"/>
    <EditText
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Count"
        android:inputType="number"
        android:background="#f0f0f4"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="12dp"
        android:drawablePadding="16dp"
        />
    <Button
        android:id="@+id/ok"
        android:layout_width="120dp"
        android:layout_height="48.3dp"
        android:text="Confirm"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="45.1dp"
        android:background="@drawable/btnrectangle"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="120dp"
        android:layout_height="48.3dp"
        android:text="Cancel"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="15.1dp"
        android:background="@drawable/btnrectangle"/>



</LinearLayout>