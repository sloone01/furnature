<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:layout_marginTop="100dp"
        android:text="Login">

    </TextView>

    <EditText
        android:layout_below="@id/tvtLogin"
        android:id="@+id/email"
        android:textColorHint="@color/gray"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:alpha="0.8"
        android:textSize="20sp"
        android:hint="Enter Username"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_white"
        />
    <EditText
        android:layout_below="@id/email"
        android:id="@+id/password"
        android:textColorHint="@color/gray"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:alpha="0.8"
        android:textSize="20sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_white"
        />

    <Button
        android:layout_below="@id/password"
        android:id="@+id/signin"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#FFFFFF"
        android:text="Sign in"
        android:textSize="26dp"
        android:textStyle="bold"
        android:background="@drawable/btnback">
    </Button>

    <TextView
        android:id="@+id/vi"
        android:layout_below="@id/signin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="You Dont Have An Account?">

    </TextView>

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/vi"
        android:text="Register Here"
        android:textColor="#2874A6"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="Register Here">

    </TextView>

</RelativeLayout>