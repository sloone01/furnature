<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="289.9dp"
    android:layout_height="435.8dp"
    android:paddingLeft="30dp"
    android:paddingBottom="30dp"
    android:paddingRight="30dp"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_gravity="center_horizontal"
    tools:ignore="MissingDefaultResource">

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:src="@drawable/brands"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="46.1dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Brand Name"
        android:background="@drawable/edit_white"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"
        android:drawablePadding="16dp"
        />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description Name"
        android:background="@drawable/edit_white"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:padding="12dp"
        android:drawablePadding="16dp"
        />
    <Button
        android:id="@+id/ok"
        android:layout_width="120dp"
        android:layout_height="48.3dp"
        android:text="Confirm"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="25.1dp"
        android:background="@drawable/btnback"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="120dp"
        android:layout_height="48.3dp"
        android:text="Cancel"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="15.1dp"
        android:background="@drawable/btnback"/>

</LinearLayout>
